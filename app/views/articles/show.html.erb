<h1>Article</h1>

<p><%= @article.title %></p>
<p><%= @article.body %></p>
<p><%= link_to "delete", article_path(@article),
        method: :delete,
        data: {confirm: "Are you sure you want to delete it?"} %>
</p>
<p>
  <%= link_to "edit", edit_article_path(@article) %>
</p>

<h3>Comments</h3>
<%= render partial: 'articles/comment', collection: @article.comments %> 
